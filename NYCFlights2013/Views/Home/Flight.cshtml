@{
	ViewData["Title"] = "Flight Page";
	@model NYCFlights2013.Models.Flights
	var flights = (List<Flights>)ViewData["flights"];
	string[] ChartHeadersFlights = new string[] {
	"Year",
	"Month",
	"Day",
	"Departure Time",
	"Departure Delay",
	"Arrival Time",
	"Arrival Delay",
	"Carrier",
	"Tail Number",
	"Flight",
	"Origin",
	"Destination",
	"Air Time",
	"Distance",
	"Hour",
	"Minute"};             //TODO: Use appropriate fields.
}
<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
    <section class="content-header">
        <h1>Echarts</h1>
    </section>
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/echarts/echarts.js"></script>
    <section class="content">
        <div class="row">
            <div class="col-md-12">
                <div id="myechart" style="width: 100%; height: 500px;">

                </div>
            </div>
        </div>
    </section>
    <table>
        <thead>
            <tr>
                @{
                    foreach (var head in ChartHeadersFlights)
                    {
                        <th>
                            @head
                        </th>
                    }
                }
            </tr>
        </thead>
        <tbody>
            <tr>
                @{ foreach (var fli in flights)
                    {
                        <td>
                            @fli.year
                        </td>
                    }
                    // TODO: Complete table.
                }
            </tr>
        </tbody>
    </table>

    <script type="text/javascript">
        var myEChart = echarts.init(document.getElementById('myechart'));
        //指定图标的配置和数据
        var option = {
            title: {
                text: 'ECharts '
            },
            tooltip: {},
            legend: {
                data: ['resource']
            },
            xAxis: {
                data: ['a', 'a', 'a', 'a']
            },
            yAxis: {},
            series: [{
                name: 'numbers',
                type: 'pie',
                data: [500, 200, 360, 100]
            }]
        };
        //使用制定的配置项和数据显示图表
        myEChart.setOption(option);</script>

</div>

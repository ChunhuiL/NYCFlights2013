@{
	ViewData["Title"] = "Flight Page";
	@model NYCFlights2013.Models.Flights
	var flights = (List<Flights>)ViewData["flights"];
	var numOfFlightsM = (List<Flights>)ViewData["numOfFlightsM"];

	string[] ChartHeadersFlights = new string[] {
	"Year",
	"Month",
	"Day",
	"Departure Time",
	"Departure Delay",
	"Arrival Time",
	"Arrival Delay",
	"Carrier",
	"Tail Number",
	"Flight",
	"Origin",
	"Destination",
	"Air Time",
	"Distance",
	"Hour",
	"Minute"};             //TODO: Use appropriate fields.
}
<!DOCTYPE HTML>
<html>
<head>
	<script type="text/javascript">
		window.onload = function () {
			var chart = new CanvasJS.Chart("chartContainer",
				{
					title: {
						text: "Number of Flights per month"
					},
					axisY: {
						title: ""
					},
					legend: {
						verticalAlign: "bottom",
						horizontalAlign: "center"
					},
					data: [

						{
							color: "#B0D0B0",
							type: "column",
							showInLegend: true,
							legendMarkerType: "none",
							legendText: "",
							dataPoints: [
								{ x: 1, y: @numOfFlightsM[0].number, label: "Jan" },
								{ x: 2, y: @numOfFlightsM[1].number, label: "Feb" },
								{ x: 3, y: @numOfFlightsM[2].number, label: "Mar" },
								{ x: 4, y: @numOfFlightsM[3].number, label: "Apr" },
								{ x: 5, y: @numOfFlightsM[4].number, label: "May" },
								{ x: 6, y: @numOfFlightsM[5].number, label: "Jun" },
								{ x: 7, y: @numOfFlightsM[6].number, label: "Jul" },
								{ x: 8, y: @numOfFlightsM[7].number, label: "Aug" },
								{ x: 9, y: @numOfFlightsM[8].number, label: "Sep" },
								{ x: 10, y: @numOfFlightsM[9].number, label: "Oct" },
								{ x: 11, y: @numOfFlightsM[10].number, label: "Nov" },
								{ x: 12, y: @numOfFlightsM[11].number, label: "Dec" },
							]
						}
					]
				});

			chart.render();
		}
	</script>
	<script type="text/javascript" src="https://canvasjs.com/assets/script/canvasjs.min.js"></script>
</head>
<body>
	<div id="chartContainer" style="height: 300px; width: 100%;">
	</div>
</body>
</html>